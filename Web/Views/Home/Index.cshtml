
@{
    Layout = null;
}

<!DOCTYPE html>

<html ng-app="microCarSales">
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Micro CarSales</title>
    <script src="//cdnjs.cloudflare.com/ajax/libs/angular.js/1.2.20/angular.min.js"></script>
    <script>
        angular.module("microCarSales", ["ngRoute", "ui.bootstrap", "ngFileUpload"])
        .config(function ($routeProvider) {
            $routeProvider.when("/addImages", {
                templateUrl: "addImages"
            });
            $routeProvider.when("/addCar", {
                templateUrl: "addCar"
            });
            $routeProvider.otherwise({
                templateUrl: "carList"
            });
        }
        );
    </script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/angular.js/1.2.20/angular-route.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/angular-ui-bootstrap/0.10.0/ui-bootstrap-tpls.min.js"></script>
    <script src="~/Scripts/ng-file-upload.js"></script>
    <script src="~/Scripts/Controllers/MicroCarSales.js"></script>
    <script src="~/Scripts/Controllers/UploadCtrl.js"></script>
    <script src="~/Scripts/Controllers/CarListCtrl.js"></script>
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.2.0/css/bootstrap.min.css">
</head>
<body ng-controller="microCarSalesCtrl">
    <div class="navbar navbar-default navbar-fixed-top" role="navigation">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" ng-click="navbarProperties.isCollapsed = !navbarProperties.isCollapsed">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <strong><a class="navbar-brand" href="#"><sub>micro</sub> CAR SALES</a></strong>
            </div>
            <div class="navbar-collapse collapse" collapse="navbarProperties.isCollapsed">
                <ul class="nav navbar-nav">
                    <li><a href="#">Home</a></li>
                    <li><a href="/routeTwo">My Stock</a></li>
                    <li><a href="#/addCar">Add Car</a></li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    @*<li class="navbar-text">
                            <b>u@u.com</b>
                            Welcome!
                        </li>*@
                    <li><a href="/login">Login</a></li>
                    <li><a href="/register">Register</a></li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container mainContent">
        <ng-view />
    </div>

    <style>
        .mainContent {
            margin-top: 60px;
        }
    </style>
</body>
</html>
